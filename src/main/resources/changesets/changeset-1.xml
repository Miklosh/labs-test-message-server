<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <changeSet id="1" author="engagepoint-university">

            <!--Adds some logic that if table already exists it will drop-->
            <preConditions onFail="MARK_RAN">
                <not>
                    <tableExists tableName="emails" />
                </not>
            </preConditions>

            <createTable tableName="emails" >
                <column  name="id" type="bigint" autoIncrement="true">
                    <constraints nullable="false" primaryKey="true" primaryKeyName="emails_id"/>
                </column>
                <column name="sender" type="varchar(255)"/>
                <column name="receiver" type="varchar(255)"/>
                <column name="subject" type="varchar(255)"/>
                <column name="text" type="varchar(255)"/>
                <column name="attachments" type="varchar(255)"/>
                <column name="creation_date" type="DATE"/>

                <column name="delete_date" type="TIMESTAMP"
                        defaultValueDate="CURRENT_TIMESTAMP"/>

                <column name="flag" type="boolean" >
                    <constraints nullable="false"/>
                </column>
            </createTable>
    </changeSet>

</databaseChangeLog>