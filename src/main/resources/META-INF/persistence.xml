<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="messaging" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <!--<jta-data-source>jdbc/messaging</jta-data-source>-->
        <!--<non-jta-data-source>messagingNON</non-jta-data-source>-->
        <class>com.engagepoint.university.messaging.entities.Attachment</class>
        <class>com.engagepoint.university.messaging.entities.Email</class>
        <class>com.engagepoint.university.messaging.entities.Sms</class>
        <class>com.engagepoint.university.messaging.entities.User</class>
        <class>com.engagepoint.university.messaging.entities.base.Base</class>
        <properties>
            <property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver" />
            <property name="hibernate.connection.url" value="jdbc:hsqldb:mem:messaging;shutdown=true" />
            <property name="hibernate.connection.username" value="sa" />
            <property name="hibernate.connection.password" value="" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
            <property name="hibernate.hbm2ddl.auto" value="create-drop" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.transaction.flush_before_completion" value="true" />
        </properties>
    </persistence-unit>
</persistence>
