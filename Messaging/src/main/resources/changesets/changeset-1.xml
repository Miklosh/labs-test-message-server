<databaseChangeLog logicalFilePath="changeset-00master-financials.xml"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create_table" author="SA">
        <createTable tableName="EmailMessage">
            <column name="id" type="int" autoIncrement="true"/>
            <column name="to" type="varchar(100)"/>
            <column name="from" type="varchar(100)"/>
            <column name="subject" type="varchar(255)"/>
            <column name="text" type="LONGVARCHAR"/>
            <column name="attachments" type="LONGVARCHAR"/>
            <column name="date_insert" type="TIMESTAMP" defaultValueDate="CURRENT_TIMESTAMP"/>
            <column name="date_delete" type="TIMESTAMP" defaultValueDate="CURRENT_TIMESTAMP"/>
            <column name="flag" type="bit"/>
        </createTable>
    </changeSet>

    <changeSet author="SA" id="insert_mock">
        <sql dbms="hypersql"
             endDelimiter="\nGO"
             splitStatements="true"
             stripComments="true">insert into EmailMessage (to,from,subject,text,attachments) values
            ('test@t.t','admin@t.t','TEST', 'Hi text!!!', 'url:\\lol\test\lolo')
        </sql>
    </changeSet>

</databaseChangeLog>